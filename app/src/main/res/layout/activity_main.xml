<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/fl_home_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_faxian"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/faxian"
            android:gravity="center"
            android:text="发现"
            android:textColor="@drawable/color_radiobutton"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/xiaoxidian"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/shape_group_bg"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_home_xiaoxi"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:button="@null"
                android:drawableTop="@drawable/xiaoxi"
                android:gravity="center"
                android:text="消息"
                android:textColor="@drawable/color_radiobutton"
                android:textSize="10sp" />

        </RelativeLayout>

        <RadioButton
            android:id="@+id/rb_home_fabu"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawable="@drawable/fabu"
            android:gravity="center_vertical" />

        <RadioButton
            android:id="@+id/rb_home_xiuquan"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/xiuquan"
            android:gravity="center"
            android:text="秀圈"
            android:textColor="@drawable/color_radiobutton"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_home_wode"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/wode"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/color_radiobutton"
            android:textSize="10sp" />
    </RadioGroup>
</LinearLayout>
