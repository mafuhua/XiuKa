<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line"/>

    <LinearLayout
        style="@style/ShopDecLL">

        <TextView
            style="@style/ShopDecTv"
            android:layout_weight="1"
            android:text="真实姓名:"/>

        <EditText
            android:id="@+id/et_name"
            style="@style/ShopDecEv"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line"/>

    <LinearLayout
        style="@style/ShopDecLL">

        <TextView
            style="@style/ShopDecTv"
            android:layout_weight="1"
            android:text="身份证号:"/>

        <EditText
            android:id="@+id/et_idcard"
            style="@style/ShopDecEv"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line"/>

    <LinearLayout
        style="@style/ShopDecLL">

        <TextView
            style="@style/ShopDecTv"
            android:layout_weight="1"
            android:text="上传身份证照"/>


    </LinearLayout>

    <LinearLayout
        style="@style/ShopDecLL">

        <TextView
            style="@style/ShopDecTv"
            android:layout_weight="1"
            android:text="直播平台:"/>

        <EditText
            android:id="@+id/et_zhibo"
            style="@style/ShopDecEv"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line"/>

    <LinearLayout
        style="@style/ShopDecLL">

        <TextView
            style="@style/ShopDecTv"
            android:layout_weight="1"
            android:text="直播房间号:"/>

        <EditText
            android:id="@+id/et_zhiboroom"
            style="@style/ShopDecEv"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line"/>

    <LinearLayout
        style="@style/ShopDecLL">

        <TextView
            style="@style/ShopDecTv"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="直播平台ID号:"/>

        <EditText
            android:id="@+id/et_zhiboid"
            style="@style/ShopDecEv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            android:padding="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="提示:如果没有房间号则填写ID号"/>

    <Button
        android:id="@+id/btn_提交"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@drawable/anniu"

        android:text="提交"
        android:textColor="@android:color/white"/>
</LinearLayout>
