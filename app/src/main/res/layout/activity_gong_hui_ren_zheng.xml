<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ShopDecLL">

                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1.5"
                    android:text="传媒公司名称:"/>

                <EditText
                    android:id="@+id/et_name"
                    style="@style/ShopDecEv"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_normal"/>

            <LinearLayout
                style="@style/ShopDecLL">

                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1.5"
                    android:text="组织机构代码:"/>

                <EditText
                    android:id="@+id/et_idcard"
                    style="@style/ShopDecEv"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_normal"/>

            <LinearLayout
                style="@style/ShopDecLL">

                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1"
                    android:text="上传工商营业执照"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/line"
                android:padding="5dp"
                android:text="拍摄工商营业执正面"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/line"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/tijiao"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_zhengmian"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/yingye"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="营业执照正面"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/line"
                android:padding="5dp"
                android:text="拍摄工商营业执反面"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/line"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/tijiao"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_fanmian"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/yingye"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="营业执照反面"/>
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_tijiaoo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:background="@drawable/anniu"
                android:text="提交"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
