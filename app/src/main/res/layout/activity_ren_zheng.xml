<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/ShopDecLL">

                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1"
                    android:text="真实姓名:"/>

                <EditText
                    android:id="@+id/et_name"
                    style="@style/ShopDecEv"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_normal"/>

            <LinearLayout
                style="@style/ShopDecLL">

                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1"
                    android:text="身份证号:"/>

                <EditText
                    android:id="@+id/et_idcard"
                    style="@style/ShopDecEv"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_normal"/>
            <LinearLayout
                style="@style/ShopDecLL">
                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1"
                    android:text="上传身份证照"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/line"
                android:padding="5dp"
                android:text="拍摄身份证正反面照片"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/line"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/tijiao"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_idcardz"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shenfenzhengz"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="身份证正面"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/tijiao"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_idcardb"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shenfenzhengb"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="身份证背面"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/line"
                android:padding="5dp"
                android:text="拍摄本人手持身份证照片"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/line"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/tijiao"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btn_idcardsc"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shenfenzhengz"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="身份证正面"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/ShopDecLL">

                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1"
                    android:text="直播平台:"/>

                <EditText
                    android:id="@+id/et_zhibo"
                    style="@style/ShopDecEv"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_normal"/>

            <LinearLayout
                style="@style/ShopDecLL">

                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1.5"
                    android:text="直播房间号:"/>

                <EditText
                    android:id="@+id/et_zhiboroom"
                    style="@style/ShopDecEv"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_normal"/>

            <LinearLayout
                style="@style/ShopDecLL">

                <TextView
                    style="@style/ShopDecTv"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="直播平台ID号:"/>

                <EditText
                    android:id="@+id/et_zhiboid"
                    style="@style/ShopDecEv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:padding="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="12sp"
                android:text="提示:有房间号则填写房间号，无房间号则填写直播平台ID号！"/>

            <Button
                android:id="@+id/btn_tijiaoo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:background="@drawable/anniu"
                android:text="提交"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
